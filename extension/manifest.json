{
  "manifest_version": 2,
  "version": "2",
  "name": "TimeWise",
  "short_name" : "TimeWise",
  "description": "A fast, simple solution to attack tedious elearning review work.",
  "author": "Pablo Buitrago, Ezequiel Aranda",
  "offline_enabled": true,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }, 
  "browser_action": {
    "default_title": "TimeWise",
    "default_popup": "dist/index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "activeTab",
    "management",
    "storage"
  ],
  "content_scripts": [{
    "matches": [
        "https://*/*",
        "http://*/*"
    ],
    "js": ["content-script.js"]
  }],
  "web_accessible_resources": ["tw-button.html"],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
